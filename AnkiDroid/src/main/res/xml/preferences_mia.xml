<!-- Advanced Preferences -->
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    android:title="@string/pref_cat_mia"
    android:summary="@string/pref_cat_mia_summ"
    android:key="pref_screen_mia">
    <CheckBoxPreference
        android:defaultValue="true"
        android:enabled="false"
        android:key="miaPassFail"
        android:title="Low Key AnkiDroid (Pass/Fail)"
        android:summary="Replaces ease buttons with Pass/Fail" />
    <CheckBoxPreference
        android:defaultValue="false"
        android:key="miaNoBoostingOrPenalties"
        android:title="No Boosting/Penalties"
        android:summary="Resets the ease of displayed cards to 250%" />
</PreferenceScreen>
